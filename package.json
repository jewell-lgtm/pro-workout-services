{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@redwoodjs/core": "2.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.7.1",
    "prettier-plugin-prisma": "^3.14.0"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true
  },
  "engines": {
    "node": ">=14.19 <=16.x",
    "yarn": ">=1.15"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  },
  "packageManager": "yarn@3.2.1",
  "lint-staged": {
    "*.{js,css,md,ts,tsx,jsx,prisma,json}": "prettier --write"
  },
  "scripts": {
    "postinstall": "husky install"
  }
}
